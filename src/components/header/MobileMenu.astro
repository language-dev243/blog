---
import PageLinks from "./PageLinks.astro";
import SocialLinks from "./SocialLinks.astro";
import MobileCloseButton from "./MobileCloseButton.astro";
const { currentPage } = Astro.props;
---

<div
  id="mobile-menu"
  class="z-40 fixed inset-0 bg-[var(--color-background)] bg-opacity-95 flex flex-col items-center space-y-8 md:hidden mobile-menu-hidden"
>
  <MobileCloseButton />
  <div class="flex flex-col items-center mt-18">
    <PageLinks currentPage={currentPage} />
    <SocialLinks />
  </div>
</div>

<style>
  .mobile-menu-hidden {
    display: none;
  }

  .mobile-menu-visible {
    display: flex;
    animation: fadeIn 0.3s ease-in-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
